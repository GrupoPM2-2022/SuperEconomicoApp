        <pancake:PancakeView Grid.Row="1" CornerRadius="30,30,0,0"
                                 BackgroundColor="#ccccce"
                                 Margin="0,-40">
            <Grid Padding="25,-560,25,0">


                <CollectionView ItemsSource="{Binding CartItems}"
                                    VerticalOptions="Start"
                                    VerticalScrollBarVisibility="Never"
                                    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                    >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame HasShadow="False" BackgroundColor="White" HeightRequest="70"
                                           CornerRadius="20" Margin="0,5" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <pancake:PancakeView Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                                                                 CornerRadius="12" Margin="0,0,10,0">


                                            <controls:CircleImage 
                                                Source="{Binding ImageProduct,  Converter={StaticResource Base64ToImage}}"
                                                HeightRequest="35"
                                                HorizontalOptions="Center"
                                                BorderColor="Purple"  
                                                BorderThickness="1"/>

                                        </pancake:PancakeView>

                                        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                                   Text="{Binding ProductName}" FontSize="15" FontAttributes="Bold" TextColor="#8873b6"/>
                                        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                                   Text="{Binding Price}" FontSize="15"
                                                   TextColor="#8873b6" />

                                        <Image Source="eliminar_producto_carrito.png" 
                                               HeightRequest="20"
                                               HorizontalOptions="Start"
                                               Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={x:Reference CurrentPage}, Path=BindingContext.DeleteProductCommand}"
                                                          CommandParameter="{Binding .}"/>
                                            </Image.GestureRecognizers>
                                        </Image>

                                        <Label Padding="25,0,0,0" Text="Eliminar" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" TextColor="#8873b6">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer  Command="{Binding Source={x:Reference CurrentPage}, Path=BindingContext.DeleteProductCommand}"
                                                          CommandParameter="{Binding .}"/>
                                            </Label.GestureRecognizers>
                                        </Label>

                                    </Grid>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


            </Grid>

        </pancake:PancakeView>
        <Label Text="{Binding TotalCost, StringFormat='Total : L{0}'}"
                   Grid.Row="2" HorizontalTextAlignment="End" FontSize="Title"
                   TextColor="Black"
                    Margin="40"
               BackgroundColor="White"/>

        <StackLayout Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,20"  HorizontalOptions="CenterAndExpand">
            <Button Text="Realizar Pedido"  
                    TextColor="White"
                    Command="{Binding PlaceOrdersCommand}"
                    HorizontalOptions="Center" 
                    CornerRadius="20"/>
            <Button Text="Cancelar Pedido" 
                    TextColor="White"
                    Command="{Binding DeleteAllProductCommand}"
                    HorizontalOptions="Center" 
                    CornerRadius="20"/>
        </StackLayout>


    </Grid>

