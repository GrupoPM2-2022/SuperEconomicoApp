<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperEconomicoApp.Views.AccountUserView"
              xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:converter="clr-namespace:SuperEconomicoApp.Converters"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:ByteArrayToImage x:Key="ByteToImage" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <StackLayout>
            <Frame 
                    HasShadow="False" 
                    BackgroundColor="White" 
                    HeightRequest="150"
                    CornerRadius="20" 
                    Margin="0,10"
                    Padding="20,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <pancake:PancakeView 
                                Grid.Column="0" 
                                Grid.Row="0" Grid.RowSpan="3"
                                CornerRadius="12"
                                Margin="0,0,10,0">
                        <StackLayout>
                            <controls:CircleImage Source="person2" IsVisible="{Binding IsImageDefault}"/>
                            <controls:CircleImage 
                                Source="{Binding Image,  Converter={StaticResource ByteToImage}}"
                                IsVisible="{Binding IsImageBD}"
                                VerticalOptions="Center"
                HorizontalOptions="Center"
                                HeightRequest="100"
                                />
                        </StackLayout>

                    </pancake:PancakeView>

                    <Label  Grid.Row="0"
                            Grid.Column="1" 
                            Text="Nombre: " 
                            FontSize="Subtitle"
                            TextColor="#8873b6"
                            FontAttributes="Bold"/>

                    <Label 
                            Grid.Row="0"
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Text="{Binding Name}"
                            FontSize="15"
                            TextColor="#a4a7b6"/>

                    <Label  Grid.Row="1"
                            Grid.Column="1" 
                            Text="Apellido: " 
                            FontSize="Subtitle"
                            TextColor="#8873b6"
                            FontAttributes="Bold"/>

                    <Label 
                            Grid.Row="1"
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Text="{Binding Lastname}" 
                            FontSize="15"
                            TextColor="#a4a7b6"/>

                    <Label  Grid.Row="2"
                            Grid.Column="1" 
                            Text="Correo: "
                            FontAttributes="Bold"
                            FontSize="Subtitle"
                            TextColor="#8873b6"/>

                    <Label 
                            Grid.Row="2"
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Text="{Binding Email}" 
                            FontSize="15"
                            TextColor="#a4a7b6"/>

                </Grid>
            </Frame>
            <Button 
                            Text="ACTUALIZAR PERFIL" 
                            BackgroundColor="#8873b6" 
                            TextColor="White" 
                            Margin="60,-15,60,0"
                            x:Name="btnEdit"
                            Command="{Binding EditUserCommand}"
                            CornerRadius="20"
                WidthRequest="200" 
            HeightRequest="40"/>

            
            <Frame CornerRadius="20"  Padding="3" BorderColor="Transparent"  Margin="20">
                <StackLayout Orientation="Horizontal" >
                    <Image Source="salida1" 
                               HorizontalOptions="Start" 
                               VerticalOptions="Center"
                               Aspect="AspectFit"
                               HeightRequest="20"
                           >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>

                    <Button 
                            Text="Cerrar Sesion" 
                            BackgroundColor="Transparent"
                            FontSize="Small"
                            x:Name="btnExit"
                            Command="{Binding LogoutCommand}"
                            CornerRadius="20"
                            HorizontalOptions="Center"/>
                    <Image Source="flecha" 
                               HorizontalOptions="EndAndExpand" 
                               VerticalOptions="Center"
                               Aspect="AspectFit"
                               HeightRequest="20"
                           >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>

                </StackLayout>
            </Frame>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>