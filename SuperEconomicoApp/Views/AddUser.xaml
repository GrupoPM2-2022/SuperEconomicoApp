<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperEconomicoApp.Views.AddUser"
             xmlns:controls="clr-namespace:SuperEconomicoApp.Controls;assembly=SuperEconomicoApp"
             xmlns:control="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">
    <ScrollView>
    <Grid Padding="20" RowSpacing="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <control:CircleImage  Grid.Row="0" 
                x:Name="img"  
                Source="person2"
                VerticalOptions="Center"
                HorizontalOptions="Center" BorderColor="#5E0F8D"  BorderThickness="1" HeightRequest="200">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="AddImg" NumberOfTapsRequired="1"/>
            </Image.GestureRecognizers>
        </control:CircleImage>


        <Label Text="NOMBRES" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="1"/>

        <controls:StandardEntry
            Grid.Row="2"
            Padding="13"
             BackgroundColor="White"
            BorderThickness="1"
            TextColor="Black"
            CornerRadius="20"
            Placeholder="Ingrese su nombre"
            x:Name="txtname"
            Keyboard="Text"
            FontSize="Small"
            />

        <Label Text="APELLIDOS" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="3"/>
        <controls:StandardEntry
            Grid.Row="4"
            Padding="13"
             BackgroundColor="White"
            TextColor="Black"
            FontSize="Small"
            BorderThickness="1"
            CornerRadius="20"
            Placeholder="Ingresa tus apellidos" 
            x:Name="txtlastname"
            Keyboard="Text"
            />
        
        <Label Text="DNI" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="5"/>
        <controls:StandardEntry
            Grid.Row="6"
            Padding="13"
             BackgroundColor="White"
            TextColor="Black"
            FontSize="Small"
            BorderThickness="1"
            CornerRadius="20"
            Placeholder="Ingresa su DNI" 
            x:Name="txtdni"
            Keyboard="Text"
            />
        
        
        <Label Text="TELEFONO" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="7"/>
        <controls:StandardEntry
            Grid.Row="8"
            Padding="13"
             BackgroundColor="White"
            TextColor="Black"
            BorderThickness="1"
            CornerRadius="20"
            Placeholder="Ingresa tu Telefono" 
             x:Name="txtphone"
             Keyboard="Telephone"
            FontSize="Small"
            />
        <Label Text="CORREO ELECTRONICO" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="9"/>
        <controls:StandardEntry
            Grid.Row="10"
            Padding="13"
             BackgroundColor="White"
            TextColor="Black"
            BorderThickness="1"
            CornerRadius="20"
            Placeholder="Ingresa tu email" 
            x:Name="txtemail"
            Keyboard="Email"
            FontSize="Small"
            />
        <Label Text="FECHA DE NACIMIENTO" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="11"/>
        <Frame Grid.Row="12" Padding="13,0,13,0" CornerRadius="20" >
            <DatePicker MinimumDate="01/01/1900" TextColor="#B4B4B4"  BackgroundColor="white"  x:Name="txtbirthdate" FontSize="Small" />

        </Frame>

        <Label Text="PASSWORD" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="13"/>

        <controls:StandardEntry
            Grid.Row="14"
            Padding="13"
             BackgroundColor="White"
            TextColor="Black"
            BorderThickness="1"
            CornerRadius="20"
            FontSize="Small"
            Placeholder="Ingresa tu password"  
            x:Name="txtpassword"
            Keyboard="Text"
            IsPassword="True"
            />
        <Label Text="REPETIR PASSWORD" Margin="0,0,0,-7" TextColor="#8873b6" Grid.Row="15"/>
        <controls:StandardEntry
            Grid.Row="16"
            Padding="13"
             BackgroundColor="White"
            TextColor="Black"
            FontSize="Small"
            BorderThickness="1"
            CornerRadius="20"
            Placeholder="Repite tu password" 
            x:Name="txtpassword2"
            Keyboard="Text"
            IsPassword="True"
            Margin="0,0,0,10"
            />

            <Button 
            Grid.Row="17"
            Text="GUARDAR" 
            BackgroundColor="#5E0F8D" 
            TextColor="White" 
            WidthRequest="300" 
            HeightRequest="50"
            x:Name="btnSave"
            Clicked="btnSave_Clicked"
            CornerRadius="20"/>
        </Grid>
    </ScrollView>

</ContentPage>